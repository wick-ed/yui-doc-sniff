<?xml version="1.0"?>
<ruleset name="YuiDoc">
    <description>A custom coding standard.</description>
    
    <!-- indentation with spaces -->
    <rule ref="Generic.WhiteSpace.DisallowTabIndent"/>
    <!-- no trailing whitespaces please -->
    <rule ref="Generic.Files.LineEndings"/>
    
    <!-- every comment block has a leading block comment which stands alone -->
    <rule ref="YuiDoc.Generic.BlockComment"/>
    
    <!-- @module tag at least once per file -->
    <rule ref="YuiDoc.Files.AtLeastOneModule"/>
    
    <!-- we got all needed header class tags in the right order and the right grouping -->
    <rule ref="YuiDoc.Class.HeaderTags"/>
    <!-- the comments of the header tags do fit to the code belonging to it -->
    <rule ref="YuiDoc.Class.HeaderComments"/>
</ruleset>